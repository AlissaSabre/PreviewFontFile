<Window x:Class="PreviewFontFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreviewFontFile"
        mc:Ignorable="d"
        Title="Preview a font file" Height="450" Width="800">
    <Grid>
        <Button Margin="10,10,10,0" Height="24" VerticalAlignment="Top" Background="{x:Null}" Click="fontButton_Click"/>
        <TextBlock Name="fontTextBlock" Margin="14,14,14,0" VerticalAlignment="Top" TextWrapping="NoWrap" IsHitTestVisible="False" Text="(Choose a font file here...)"/>
        <TextBox Name="sampleTextBox" Margin="10 40 10 0" Height="20"  VerticalAlignment="Top" TextWrapping="NoWrap" Text="Sample Text"/>
        <TextBlock Name="infoTextBox" Margin="10 72 10 0" Height="52" VerticalAlignment="Top"/>
        <Glyphs Name="sampleGlyphs" FontRenderingEmSize="100" Fill="Black" Margin="20,132,20,0" UnicodeString="{Binding ElementName=sampleTextBox, Path=Text, Mode=OneWay}" />
    </Grid>
</Window>
